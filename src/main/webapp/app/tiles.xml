<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE tiles-definitions PUBLIC "-//Apache Software Foundation//DTD Tiles Configuration 3.0//EN" "http://tiles.apache.org/dtds/tiles-config_3_0.dtd">
<tiles-definitions>

  <definition name="app" templateExpression="/layout/app.jsp">
    <put-attribute name="css" value="/layout/css.jsp"/>
    <put-attribute name="jsPre" value="/layout/jsPre.jsp"/>
    <put-attribute name="jsPost" value="/layout/jsPost.jsp"/>
    <put-attribute name="menu" value="/app/menu.jsp" />
    <put-attribute name="loadingBar" value="/layout/loadingBar.jsp"/>
  </definition>
  
  <definition name="appFluid" templateExpression="/layout/appFluid.jsp">
    <put-attribute name="css" value="/layout/css.jsp"/>
    <put-attribute name="jsPre" value="/layout/jsPre.jsp"/>
    <put-attribute name="jsPost" value="/layout/jsPost.jsp"/>
    <put-attribute name="menu" value="/app/menu.jsp" />
  </definition>
  
  <definition name="popup" templateExpression="/layout/popup.jsp">
    <put-attribute name="css" value="/layout/css.jsp"/>
    <put-attribute name="jsPre" value="/layout/jsPre.jsp"/>
    <put-attribute name="jsPost" value="/layout/jsPost.jsp"/>
  </definition>

  <definition name="app/home" extends="app">
    <put-attribute name="title" value="Benvenuto" />
    <put-attribute name="content" value="/app/home.jsp" />
  </definition>

</tiles-definitions>